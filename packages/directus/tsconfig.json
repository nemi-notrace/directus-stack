{
	"compilerOptions": {
		"target": "esnext",
		"module": "es2020",
		"rootDir": "./",
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"inlineSourceMap": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
	]
}